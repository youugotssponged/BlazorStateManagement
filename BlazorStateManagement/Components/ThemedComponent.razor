@if(ThemeInfo != null && ThemeInfo == "Dark-mode")
{
    <div style="border: 2px solid white; background-color: black; color: white; margin: 20px;text-align:center;font-size:50px">
        Themed Component
    </div>
} 
else
{
    <div style="border: 2px solid black; background-color: white; color: black;  margin: 20px;text-align:center;font-size:50px">
        Themed Component
    </div>
}

@code {
    [CascadingParameter]
    protected string? ThemeInfo { get; set; }
}
